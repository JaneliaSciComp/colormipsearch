<?xml version="1.0" encoding="UTF-8"?>

<configuration>

    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>${user.home}/.spark/logs/colormipsearch.log</file>
        <append>false</append>
        <encoder>
            <pattern>%date [%thread] %level [%logger] %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoders are assigned the type
             ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level [%logger] %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.janelia.colormipsearch" level="INFO"/>

    <!-- Reduce Spark verbosity -->
    <logger name="org.spark" level="INFO"/>
    <logger name="org.spark_project" level="WARN"/>
    <logger name="org.apache.spark.rdd" level="WARN"/>
    <logger name="org.apache.spark.executor" level="WARN"/>
    <logger name="org.apache.spark.scheduler" level="WARN"/>
    <logger name="org.apache.spark.storage" level="WARN"/>
    <logger name="org.apache.hadoop" level="WARN"/>

    <logger name="loci.formats" level="WARN"/>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FILE"/>
    </root>

</configuration>
